{
  "compilerOptions": {
    "outDir": "./dist",       // Compiled files go into the dist/ folder
    "rootDir": "./src",       // Source TypeScript files are inside src/
    "module": "CommonJS",     // Use CommonJS modules for Node.js
    "target": "ES6",          // Target ES6 for better compatibility
    "strict": true,           // Enable strict type checking
    "esModuleInterop": true   // Allows importing ES modules
  }
}
